{
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "./out",
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.js"]
}
